{
  "project_name": "示例Python项目",
  "source_directory": "src",
  "ruff": {
    "enabled": true,
    "check_enabled": true,
    "format_enabled": true,
    "fix_enabled": true,
    "line_length": 88,
    "target_version": "py311",
    "select_rules": ["E", "W", "F", "I", "B", "C4", "UP", "N"],
    "ignore_rules": ["E501"]
  },
  "checker": {
    "python_version": "3.11",
    "strict_mode": false,
    "type_check_mode": "basic"
  },
  "unified": {
    "run_basedpyright": true,
    "run_ruff": true,
    "fail_fast": false,
    "merge_reports": true,
    "conflict_resolution": "basedpyright_priority"
  }
}