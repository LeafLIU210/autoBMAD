{
  "version": "1.0.0",
  "description": "Claude Code CLI hooks configuration for BMAD Workflow Automation",
  "hooks": {
    "tool_use": {
      "command": "powershell -ExecutionPolicy Bypass -File ./hooks/ToolUseHandler.ps1",
      "enabled": true,
      "description": "Triggered when Claude Code CLI uses any tool",
      "timeout_seconds": 30,
      "retry_count": 2
    },
    "message": {
      "command": "powershell -ExecutionPolicy Bypass -File ./hooks/MessageHandler.ps1",
      "enabled": true,
      "description": "Triggered when Claude Code CLI sends or receives messages",
      "timeout_seconds": 30,
      "retry_count": 2
    },
    "session_complete": {
      "command": "powershell -ExecutionPolicy Bypass -File ./hooks/SessionCompleteHandler.ps1",
      "enabled": true,
      "description": "Triggered when Claude Code CLI session completes",
      "timeout_seconds": 60,
      "retry_count": 3
    },
    "tool_start": {
      "command": "powershell -ExecutionPolicy Bypass -File ./hooks/ToolStartHandler.ps1",
      "enabled": false,
      "description": "Triggered when Claude Code CLI starts using a tool",
      "timeout_seconds": 15,
      "retry_count": 1
    },
    "tool_end": {
      "command": "powershell -ExecutionPolicy Bypass -File ./hooks/ToolEndHandler.ps1",
      "enabled": false,
      "description": "Triggered when Claude Code CLI finishes using a tool",
      "timeout_seconds": 15,
      "retry_count": 1
    },
    "error": {
      "command": "powershell -ExecutionPolicy Bypass -File ./hooks/ErrorHandler.ps1",
      "enabled": true,
      "description": "Triggered when Claude Code CLI encounters an error",
      "timeout_seconds": 30,
      "retry_count": 3
    },
    "user_input": {
      "command": "powershell -ExecutionPolicy Bypass -File ./hooks/UserInputHandler.ps1",
      "enabled": false,
      "description": "Triggered when user provides input to Claude Code CLI",
      "timeout_seconds": 15,
      "retry_count": 1
    },
    "assistant_response": {
      "command": "powershell -ExecutionPolicy Bypass -File ./hooks/AssistantResponseHandler.ps1",
      "enabled": false,
      "description": "Triggered when Claude Code CLI generates a response",
      "timeout_seconds": 30,
      "retry_count": 1
    }
  },
  "global_settings": {
    "enable_async_execution": false,
    "max_concurrent_hooks": 5,
    "default_timeout_seconds": 30,
    "default_retry_count": 2,
    "log_hook_execution": true,
    "hook_execution_timeout_seconds": 120
  },
  "event_filtering": {
    "enabled": false,
    "include_patterns": [
      "tool_use.*",
      "session_complete.*",
      "error.*"
    ],
    "exclude_patterns": [
      "message.debug.*",
      "tool_start.read.*",
      "tool_end.read.*"
    ]
  },
  "data_transformation": {
    "enabled": true,
    "transformations": {
      "sanitize_paths": true,
      "truncate_long_messages": true,
      "max_message_length": 1000,
      "remove_sensitive_data": true,
      "sensitive_patterns": [
        "password",
        "token",
        "key",
        "secret",
        "credential"
      ]
    }
  }
}